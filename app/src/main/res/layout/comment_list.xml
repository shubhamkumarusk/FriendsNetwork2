<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/user_name_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="shubhamkumarusk"
        style="@style/textviewSignin"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dp_image"
        />


    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/textviewSignin"
        tools:text="Nice Mother Fucker"
        android:textStyle="normal"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/dp_image"
        app:layout_constraintTop_toBottomOf="@id/user_name_cmt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/dp_image"

        />

</androidx.constraintlayout.widget.ConstraintLayout>